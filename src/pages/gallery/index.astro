---
import Layout from '../../layouts/Layout.astro';
import gallery from '../../data/gallery.json';
---

<Layout title="Gallery Section">
    <main class="text-white max-w-5xl mx-auto p-4">
        <h1 class="text-4xl py-8">Gallery</h1>
        <div class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
            {gallery.map((image) => {
                return (
                    <div class="relative">
                        <div class="group aspect-h-1 aspect-w-1 block w-full overflow-hidden rounded-lg bg-gray-100">
                            <img src={image.url} alt="" class="object-cover pointer-events-none group-hover:opacity-75" transition:name={`img:${image?.id}`} />
                            <a href={`/gallery/${image.id}`} class="absolute inset-0">
                                <span class="sr-only">View details for {image.filename}</span>
                            </a>
                        </div>
                    </div>
                );
            })}
        </div>
    </main>
</Layout>